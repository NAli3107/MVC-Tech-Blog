{{#each blogPosts as |blogPost|}}  
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/dashboard/{{blogPost.id}}">{{blogPost.title}}</a>
    </h2>
    <p>Created by {{project.user.name}} on {{format_date blogPost.date_created}}</p>
  </div>
    <div class="col-md-7">
    <p>
      {{blogPost.description}}
    </p>
  </div>
</div>
{{/each}}
